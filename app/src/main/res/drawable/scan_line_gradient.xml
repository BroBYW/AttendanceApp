<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer soft glow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#0010B981"
                android:centerColor="#8010B981"
                android:endColor="#0010B981"
                android:type="linear"
                android:angle="0" />
            <size android:height="6dp" />
            <corners android:radius="3dp" />
        </shape>
    </item>

    <!-- Inner bright core -->
    <item
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#0010B981"
                android:centerColor="#FF10B981"
                android:endColor="#0010B981"
                android:type="linear"
                android:angle="0" />
            <size android:height="2dp" />
            <corners android:radius="1dp" />
        </shape>
    </item>

</layer-list>
